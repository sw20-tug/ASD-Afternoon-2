<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HotelRatingActivity">

    <RelativeLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <RatingBar
            android:id="@+id/rate_hotel"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="false"
            android:layout_centerInParent="false"
            android:layout_centerVertical="false"
            android:layout_marginStart="37dp"
            android:layout_marginTop="113dp"
            android:layout_marginEnd="118dp"
            android:layout_marginBottom="358dp"
            android:indeterminate="false"
            android:isIndicator="false"
            android:numStars="10"
            android:progressTint="#009688"
            android:rating="5"
            android:saveEnabled="false"
            android:stepSize="1" />

        <Button
            android:id="@+id/button_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="243dp"
            android:layout_marginEnd="58dp"
            android:layout_marginBottom="160dp"
            android:stateListAnimator="@null"
            android:text="dismiss" />

        <Button
            android:id="@+id/button_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="58dp"
            android:layout_marginEnd="243dp"
            android:layout_marginBottom="160dp"
            android:elevation="30dp"
            android:text="done" />

        <TextView
            android:id="@+id/headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="71dp"
            android:layout_marginEnd="165dp"
            android:layout_marginBottom="641dp"
            android:text="Rate this Hotel:" />

        <TextView
            android:id="@+id/hotel_name"
            android:layout_width="314dp"
            android:layout_height="49dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="31dp"
            android:layout_marginTop="199dp"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="481dp"
            android:text="xxxxxxxxxxxxxxxxx"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/hotel_picture_container_ratingview"
            android:layout_width="229dp"
            android:layout_height="229dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="90dp"
            android:layout_marginBottom="226dp"
            app:srcCompat="@drawable/ic_launcher_background" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>